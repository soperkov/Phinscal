@page "/Info"

@rendermode InteractiveServer
@using Phinscal.Models
@using Phinscal.Services

<style>
    body {
        display: flex;
        flex-direction: column;
        align-items: center;
        background-color: #353634;
        color: palegoldenrod;
        font-family: Arial, sans-serif;
        padding: 20px;
    }

    /* HEADER */
    .header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        width: 100%;
        max-width: 1100px;
        padding: 20px;
    }

        .header img {
            max-height: 120px;
        }

        .header h2 {
            font-size: 26px;
            font-style: italic;
            color: palegoldenrod;
            text-align: center;
            flex: 1;
        }

    /* MAIN CONTENT */
    .main-container {
        display: flex;
        align-items: center;
        justify-content: space-between;
        max-width: 1100px;
        width: 100%;
        background-color: #2b2b2a;
        padding: 30px;
        border-radius: 10px;
        border: 2px solid #423e1b;
        gap: 20px;
    }

    .text-content {
        flex: 1;
        text-align: left;
    }

    h1 {
        color: darkgoldenrod;
        font-style: italic;
        margin-bottom: 20px;
    }

    ul {
        list-style: none;
        padding-left: 0;
        margin-top: 10px;
    }

    li {
        font-size: 16px;
        line-height: 1.6;
        display: flex;
        align-items: center;
        gap: 10px;
    }

        li::before {
            content: "✦";
            color: darkgoldenrod;
            font-size: 18px;
        }

    dt {
        font-size: larger;
        margin-bottom: 15px;
    }

    .device-image {
        max-width: 300px;
        border-radius: 5px;
    }

    /* ORDER BUTTON */
    .order-button {
        margin-top: 30px !important;
        display: block;
        background-color: darkgoldenrod;
        color: black;
        font-size: 18px;
        font-weight: bold;
        padding: 12px 24px;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        text-decoration: none;
        text-align: center;
        margin-top: 15px;
        width: 200px;
    }

        .order-button:hover {
            background-color: palegoldenrod;
        }

</style>

<!-- HEADER -->
<div class="header">
    <img src="Images/logo.png" alt="Fiscal Logo" />
    <h2>Sve na jednom mjestu i u jednom uređaju!</h2>
</div>

<!-- MAIN CONTENT -->
<div class="main-container">
    <div class="text-content">
        <h1>Blagajna odmah spremna za rad</h1>
        <dl>
            <dt><span>&#10023;</span> Isporučujemo blagajnu na željenu lokaciju</dt>
            <dt><span>&#10023;</span> Bez dodatnih odlazaka u banku dogovorite svoju fiskalnu blagajnu s kartičnim plaćanjem</dt>
            <dt><span>&#10023;</span> Web sučelje za izmjene cjenika, artikala, izvještaje, dodavanje blagajnika...</dt>
            <dt><span>&#10023;</span> Račune možete uvijek izdavati i ako se internetska veza prekine</dt>
            <dt><span>&#10023;</span> Sim kartica dolazi u paketu s blagajnom</dt>
        </dl>
        <a class="order-button" @onclick="OrderDetails">NARUČI</a>
    </div>
    <div class="img-container">
        <img src="Images/uredaj.png" alt="Device" class="device-image" />
    </div>
</div>

@code {
    [Inject] private NavigationManager NavManager { get; set; }
    [Inject] private LoggedInUserModel loggedInUserModel { get; set; }

    private void OrderDetails()
    {
        NavManager.NavigateTo("/OrderDetails");
    }
}
